<VirtualHost *:80>
	
	ServerName DOMAIN
	ServerAlias www.DOMAIN

	ServerAdmin admin@royalpixel.tv
	DocumentRoot /home/vhosts/DOMAIN/public

	<Directory /home/vhosts/DOMAIN/public>	
		Options -Indexes
		AllowOverride all
		Require all granted
	</Directory>

	<IfModule mod_fastcgi.c>
		AddType application/x-httpd-fastphp .php
		Action application/x-httpd-fastphp /phpPHP_VERSION-fcgi
		Alias /phpPHP_VERSION-fcgi /usr/lib/cgi-bin/phpPHP_VERSION-fcgi-DOMAIN
		FastCgiExternalServer /usr/lib/cgi-bin/phpPHP_VERSION-fcgi-DOMAIN -socket FPM_SOCKET -pass-header Authorization -idle-timeout 600
		<Directory /usr/lib/cgi-bin>
			Require all granted
		</Directory>
	</IfModule>

	<FilesMatch ".+\.ph(p[3457]?|t|tml)$">
		SetHandler application/x-httpd-fastphp
	</FilesMatch>

	<LocationMatch "/(fpm-ping|fpm-status)">
		Require local
		SetHandler phpPHP_VERSION-fcgi-virt-DOMAIN
		Action phpPHP_VERSION-fcgi-virt-DOMAIN /phpPHP_VERSION-fcgi virtual
	</LocationMatch>

	ErrorLog ${APACHE_LOG_DIR}/error.log
	CustomLog ${APACHE_LOG_DIR}/access.log vhost_combined

</VirtualHost>

# vim: syntax=apache ts=4 sw=4 sts=4 sr noet
